{
  "files.defaultLanguage": "html", // Использовать дефолтный язык html для новых файлов
  "files.autoSave": "onFocusChange", // Автосохранение файла при потере фокуса окна
  "editor.formatOnSave": true, // Форматировать при сохранении файла
  "editor.formatOnType": true, // Форматируйте при печати
  "editor.formatOnPaste": true, // Форматировать при вставке
  "editor.mouseWheelZoom": true, // Масштабировать колесом мыши
  "editor.linkedEditing": true, // Автоматически менять закрывающий тег при редактировании
  "editor.occurrencesHighlight": "singleFile", // Включает подсветку всех вхождений, включено по умолчанию
  "editor.multiCursorModifier": "ctrlCmd", // Управление поведением нескольких курсоров
  "editor.bracketPairColorization.enabled": true, // Подсветка парных скобок по всему документу
  "editor.gotoLocation.multipleDefinitions": "goto", // Быстрый переход внутрь модуля
  "editor.matchBrackets": "always", //Подсветка парных скобок у курсора
  "editor.autoClosingBrackets": "always", // Завершать скобки автоматически и ставить курсор между ними.
  "editor.autoClosingQuotes": "always", // Завершать кавычки автоматически
  "editor.autoSurround": "languageDefined", // Создавать обрамление конструкции кавычками при наборе согласно синтаксису языку
  "editor.renderControlCharacters": true, // Показывать управляющие символы (например, перевод строки)
  "editor.lightbulb.enabled": "on", // Включение лампочки для рефакторинга
  "editor.selectionClipboard": true, //Отдельный буфер обмена linux для вставки средней кнопкой
  "editor.folding": false, // Отключить сворачивание кода
  "editor.minimap.autohide": "mouseover", // Миникарта открывается при наведении
  "editor.lineHeight": 23, // Высота строки — 23 px
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]};',./", // Разделительные символы слов для навигации по тексту
  "editor.wordWrap": "on", // Гибкий перенос строк по ширине редактора
  "editor.renderLineHighlight": "none", // Отключить подсветку строк по умолчанию
  "editor.fontFamily": "Noto Sans Mono", // Шрифт редактора
  "editor.fontSize": 18, // Размер шрифта редактора
  "editor.tabSize": 2, // Размер табуляции равен двум пробелам
  "editor.insertSpaces": true, // Вставка правильного числа пробелов при табуляции
  "editor.detectIndentation": true, // Автоматически определять стиль отступов
  "editor.autoIndentOnPaste": true, // Автоматичски применять правильные отступы при вставке
  "editor.fontLigatures": true, // Улучшить качество печати моноширинных шрифтов
  "editor.lineNumbers": "relative", // Выравнивание строки подчёркиванием и указанием номера строки
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Форматтер кода по умолчанию
  "json.format.enable": true, // Встроенный автоформаттер для JSON файлов
  "workbench.startupEditor": "none", // Новый файл открывается без стартового окна
  "workbench.activityBar.location": "top", //Активити бар сверху
  "workbench.editor.showTabs": "single", // Одновременное использование только одной вкладки (без множества вкладок)
  "workbench.editor.showIcons": false, // Скрыть иконки на вкладках файлов
  "workbench.editor.labelFormat": "short",
  "security.workspace.trust.enabled": false, // Отключить функцию доверия рабочей области
  "security.workspace.trust.untrustedFiles": "open", // Отключить запрос о доверии к рабочему пространству при запуске
  "terminal.integrated.defaultProfile.linux": "bash", //Оболочка терминала по умолчанию
  "terminal.integrated.cursorStyle": "line", // Стиль строки курсора терминала
  "terminal.integrated.copyOnSelection": true, // Копировать выделенный текст в терминал автоматически
  "terminal.integrated.fontSize": 18, // Размер шрифта в терминале
  "terminal.integrated.fontFamily": "JetBrainsMonoNL Nerd Font Mono",
  "git.autofetch": true, // Автозагрузка свежих коммитов из реп
  "npm.packageManager": "npm", // Пакетник для js
  "javascript.updateImportsOnFileMove.enabled": "always", // Обновляет импортированные пути при перемещении файлов
  "typescript.updateImportsOnFileMove.enabled": "always", // Обновляет импортированные пути при перемещении файлов
  "extensions.autoCheckUpdates": false, // Автопроверка обновления расширений
  "extensions.autoUpdate": false, // Автообновление расширений
  "update.mode": "none", // Отключение обновлений
  "telemetry.telemetryLevel": "off", // Оформление
  "explorer.confirmDelete": false, // Не требовать подтверждения при удалении файлов
  "editor.quickSuggestionsDelay": 200, // Время появления подсказок при наборе в мс
  "editor.hover.delay": 200, // Время появления подсказок при наведении в мс
  "editor.smoothScrolling": true, // Плавная прокрутка в редакторе
  "editor.cursorSmoothCaretAnimation": "on", // Включить плавную анимацию курсора
  "ruff.enable": true, // Включаем Ruff (через официальное расширение)
  "ruff.lineLength": 88, // Максимальная длина строки
  "ruff.lint.select": ["E", "F", "W", "I", "D"], // Включённые категории проверок
  "python.linting.pylintEnabled": false, // Отключаем другие линтеры, чтобы не мешали (по желанию)
  "python.linting.enabled": true, // Включаем общий линтинг Python
  "python.linting.flake8Enabled": false,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit", // Применяет все доступные "исправления" (fix all) при явном сохранении
      "source.organizeImports": "explicit" // Автоматически упорядочивает импорты при явном сохранени
    },
    "editor.defaultFormatter": "charliermarsh.ruff" // Дефолтный форматтер для питона
  },
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": { "django-html": "html" },
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.run": "onSave",
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "sync.gist": "97fc7d05ceae8261c734efb500452ccb",
  "workbench.colorTheme": "Owlet (Slate)"
}
